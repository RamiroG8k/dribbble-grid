---
import Layout from "../layouts/Layout.astro";
import Card from '../components/Card.astro';
---

<Layout title="Welcome to Astro.">
	<main
		class="h-screen mx-auto flex flex-col lg:flex-row w-full max-w-screen-2xl gap-4"
	>
		<section class="flex flex-col h-full lg:w-3/4 gap-4">
			<div class="flex h-2/3 w-full gap-4">
				<div class="rounded-xl h-full w-3/4 flex gap-4 bg-accent-light">
				</div>

				<div class="h-full w-1/4 flex flex-col gap-4">
					<div class="rounded-xl w-full h-1/2 bg-background-light"></div>
					<div class="rounded-xl w-full h-1/2 bg-accent"></div>
				</div>
			</div>

			<div class="flex gap-4 h-1/3 w-full">
				<div class="rounded-xl h-full w-1/3 bg-accent"></div>
				<div class="rounded-xl h-full w-2/3 bg-accent-light"></div>
			</div>
		</section>

		<section class="flex flex-col gap-4 h-full lg:w-1/4">
			<div class="rounded-xl h-4/5 w-full bg-accent-light"></div>

			<div class="flex gap-4 h-1/5 w-full">
				<Card title="#000000" class="text-background-light bg-background-dark" />
				<Card title="#3b82f6" class="text-background-light bg-accent" />
				<Card title="#dbeafe" class="bg-accent-light" />
				<Card title="#FFFFFF" class="bg-background-light" />
			</div>
		</section>
	</main>
</Layout>
